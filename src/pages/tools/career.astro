---
import Layout from '../../layouts/Layout.astro';

const careerTools = [
  {
    name: "Cover Letter Generator",
    description: "Create professional, tailored cover letters that highlight your qualifications and stand out to employers.",
    icon: "letter",
    color: "orange",
    href: "/tools/cover-letter"
  },
  {
    name: "Resume Plan Generator",
    description: "Create a structured plan for your resume. Get section-by-section guidance and content suggestions.",
    icon: "resume",
    color: "pink",
    href: "/tools/resume-plan"
  },
  {
    name: "Interview Questions Generator",
    description: "Generate tailored interview questions for any position. Get comprehensive questions with suggested answers.",
    icon: "interview",
    color: "blue",
    href: "/tools/interview-questions"
  },
  {
    name: "Recommendation Letter Generator",
    description: "Create professional recommendation letters that highlight achievements and potential. Generate personalized letters for any purpose.",
    icon: "recommendation",
    color: "purple",
    href: "/tools/recommendation-letter"
  }
];

const testimonials = [
  {
    quote: "The Cover Letter Generator helped me land interviews at three top companies. The personalized content made me stand out from other applicants.",
    author: "Marcus Johnson",
    role: "Software Engineer"
  },
  {
    quote: "As a hiring manager, I use the Interview Questions Generator to prepare for candidate interviews. It saves me hours of preparation time and helps me find the best talent.",
    author: "Lisa Chen",
    role: "HR Director"
  },
  {
    quote: "The Resume Plan Generator transformed my resume from mediocre to outstanding. I received compliments from recruiters on how well-organized and professional it looked.",
    author: "Jordan Taylor",
    role: "Marketing Professional"
  }
];

const faqs = [
  {
    question: "Are these career tools really free?",
    answer: "Yes! All our AI career tools are completely free to use with no word limits, no registration required, and no hidden fees."
  },
  {
    question: "How personalized are the generated documents?",
    answer: "Our AI tools create highly personalized content based on the information you provide. For best results, include specific details about your experience, skills, and the positions you're targeting."
  },
  {
    question: "Will the generated content be unique?",
    answer: "Yes, each document is uniquely generated based on your inputs. We recommend adding your personal touches to make the content even more authentic and tailored to your voice."
  },
  {
    question: "Do I need to create an account?",
    answer: "No account creation is necessary. Simply visit the tool page and start generating content immediately."
  },
  {
    question: "Can I edit the generated content?",
    answer: "Absolutely! We encourage you to review and customize the generated content to ensure it perfectly matches your personal style and specific needs."
  },
  {
    question: "How do these tools compare to paid career services?",
    answer: "Our free AI tools offer comparable quality to many paid services. While professional career coaches provide personalized feedback, our tools give you a strong foundation without the high costs."
  }
];
---

<Layout title="Career AI Tools - Free Job Search Assistants - AI-Free-Forever">
  <main class="container mx-auto px-4 py-12">
    {/* Hero Section */}
    <div class="bg-gradient-to-br from-indigo-50 to-indigo-100/50 py-16 mb-12 rounded-2xl text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Free AI Career Tools
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Accelerate your job search and career growth with our powerful AI career tools. Create professional resumes, cover letters, prepare for interviews, and moreâ€”completely free.
      </p>
    </div>

    {/* Tools Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
      {careerTools.map(tool => (
        <a href={tool.href} class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition group">
          <div class="p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class={`w-12 h-12 rounded-xl bg-${tool.color}-50 flex items-center justify-center text-${tool.color}-500 group-hover:bg-${tool.color}-100 transition`}>
                {tool.icon === 'letter' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                )}
                {tool.icon === 'resume' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                )}
                {tool.icon === 'interview' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                )}
                {tool.icon === 'recommendation' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                )}
              </div>
              <h2 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition">{tool.name}</h2>
            </div>
            <p class="text-gray-600 mb-4">{tool.description}</p>
            <div class="flex justify-end">
              <span class="text-sm font-medium text-indigo-500 group-hover:text-indigo-600 transition flex items-center gap-1">
                Try it now
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    {/* Benefits Section */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Why Use Our AI Career Tools?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Stand Out From Competition</h3>
          <p class="text-gray-600">Create professional-quality career documents that highlight your unique strengths and make employers take notice.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Save Valuable Time</h3>
          <p class="text-gray-600">Generate polished career documents in minutes instead of spending hours writing and formatting from scratch.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Boost Your Confidence</h3>
          <p class="text-gray-600">Enter interviews and job applications with professionally crafted materials that showcase your best qualities.</p>
        </div>
      </div>
    </div>

    {/* Job Search Success Section */}
    <div class="mb-16 bg-white p-8 rounded-2xl shadow-lg">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">How Our AI Tools Improve Your Job Search Success</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">ATS-Optimized Documents</h3>
          <p class="text-gray-600 mb-6">Our AI tools create documents that pass through Applicant Tracking Systems (ATS) with ease, ensuring your application reaches human recruiters.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Tailored to Each Opportunity</h3>
          <p class="text-gray-600 mb-6">Customize your career documents for each specific job application, highlighting the most relevant skills and experiences.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Professional Formatting</h3>
          <p class="text-gray-600">All generated documents follow industry-standard formatting that looks clean and professional on any device.</p>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Interview Preparation</h3>
          <p class="text-gray-600 mb-6">Practice with tailored interview questions specific to your industry and role, complete with suggested answers.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Highlight Achievements</h3>
          <p class="text-gray-600 mb-6">Our tools help you articulate your accomplishments in compelling, quantifiable ways that impress employers.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Consistent Personal Branding</h3>
          <p class="text-gray-600">Maintain a consistent professional image across all your career documents and communications.</p>
        </div>
      </div>
    </div>

    {/* Testimonials */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">What Our Users Say</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map(testimonial => (
          <div class="bg-white p-6 rounded-2xl shadow-md">
            <div class="flex gap-1 mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-gray-600 mb-4 italic">"{testimonial.quote}"</p>
            <div>
              <p class="font-semibold text-gray-900">{testimonial.author}</p>
              <p class="text-sm text-gray-500">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* How It Works */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">How Our Career AI Tools Work</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 mx-auto mb-4">
            <span class="text-xl font-bold">1</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Choose Your Tool</h3>
          <p class="text-gray-600">Select the career tool that matches your current job search needs.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 mx-auto mb-4">
            <span class="text-xl font-bold">2</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Enter Your Details</h3>
          <p class="text-gray-600">Provide information about your experience, skills, and target position.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 mx-auto mb-4">
            <span class="text-xl font-bold">3</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Customize Options</h3>
          <p class="text-gray-600">Select tone, style, and other preferences to match your personal brand.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 mx-auto mb-4">
            <span class="text-xl font-bold">4</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Generate & Use</h3>
          <p class="text-gray-600">Get instant results ready to use in your job search.</p>
        </div>
      </div>
    </div>

    {/* FAQ Section */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
      <div class="space-y-4 max-w-3xl mx-auto">
        {faqs.map(faq => (
          <div class="bg-white p-6 rounded-2xl shadow-md">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>

    {/* CTA Section */}
    <div class="bg-indigo-50 p-8 rounded-2xl text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to Advance Your Career?</h2>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">Start creating professional career documents and preparing for interviews with our free AI career tools. No registration, no credit card, no limits.</p>
      <div class="flex flex-wrap justify-center gap-4">
        {careerTools.map(tool => (
          <a 
            href={tool.href} 
            class="px-6 py-3 bg-indigo-500 text-white rounded-xl hover:bg-indigo-600 transition shadow-md"
          >
            Try {tool.name}
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>