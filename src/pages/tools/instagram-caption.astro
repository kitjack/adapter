                <td class="py-3 px-4 text-gray-700">Limited</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <SimilarTools currentToolPath="instagram-caption" category="social-media" client:load />
  </main>
</Layout>