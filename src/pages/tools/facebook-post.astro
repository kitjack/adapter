                <td class="py-3 px-4 text-gray-700">Limited</td>
              </tr>
              <tr>
                <td class="py-3 px-4 text-gray-900">Emoji and CTA Options</td>
                <td class="py-3 px-4 text-gray-700">Fully Supported</td>
                <td class="py-3 px-4 text-gray-700">Basic</td>
                <td class="py-3 px-4 text-gray-700">Basic</td>
                <td class="py-3 px-4 text-gray-700">Basic</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <SimilarTools currentToolPath="facebook-post" category="social-media" client:load />
  </main>
</Layout>