<Layout title="AI Resume Plan Generator - AI-Free-Forever">
  <main class="container mx-auto px-4 py-12">
    <div class="bg-gradient-to-br from-pink-50 to-pink-100/50 py-16 mb-12 rounded-2xl text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        AI Resume Plan Generator
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Create a structured plan for your resume. Get section-by-section guidance and content suggestions.
      </p>
    </div>
    <ResumePlanGenerator client:load />
    
    <div class="max-w-4xl mx-auto mt-16">
      <div class="prose prose-lg max-w-none">
        <h2 class="text-3xl font-bold text-gray-900 mt-12 mb-6">Transform Your Job Hunt with Our Resume Plan Generator â€“ No Cost, No Limits</h2>
