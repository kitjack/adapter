---
import Layout from '../../layouts/Layout.astro';

const writingTools = [
  {
    name: "Article Rewriter",
    description: "Transform existing content with fresh phrasing while preserving meaning. Generate unique variations of your articles.",
    icon: "rewrite",
    color: "indigo",
    href: "/tools/article-rewriter"
  },
  {
    name: "Long Form Blog Post Generator",
    description: "Create comprehensive, SEO-friendly blog posts with custom sections. Generate engaging long-form content that ranks.",
    icon: "blog",
    color: "violet",
    href: "/tools/long-form-blog"
  },
  {
    name: "Product Description Generator",
    description: "Create compelling product descriptions that convert browsers to buyers. Generate persuasive copy that highlights key features and benefits.",
    icon: "product",
    color: "emerald",
    href: "/tools/product-description"
  },
  {
    name: "Blog FAQ Generator",
    description: "Generate question-and-answer sections to boost SEO and user engagement. Create comprehensive FAQs that address user queries.",
    icon: "faq",
    color: "cyan",
    href: "/tools/blog-faq"
  },
  {
    name: "Listicle Generator",
    description: "Create engaging, formatted list-style article content. Generate compelling listicles that capture reader attention.",
    icon: "list",
    color: "fuchsia",
    href: "/tools/listicle"
  },
  {
    name: "Pros and Cons Generator",
    description: "Create balanced argument sections for blog posts and reviews. Generate comprehensive pros and cons lists for any topic.",
    icon: "compare",
    color: "rose",
    href: "/tools/pros-and-cons"
  },
  {
    name: "Product Review Generator",
    description: "Create balanced, informative product reviews for any item. Generate comprehensive reviews that help users make informed decisions.",
    icon: "review",
    color: "lime",
    href: "/tools/product-review"
  },
  {
    name: "Quora Answer Generator",
    description: "Create informative, helpful answers for Quora questions. Generate well-researched responses that provide value to readers.",
    icon: "answer",
    color: "red",
    href: "/tools/quora-answer"
  }
];

const testimonials = [
  {
    quote: "The Long Form Blog Generator has completely transformed my content creation process. What used to take me days now takes minutes, and the quality is consistently impressive.",
    author: "Jessica Williams",
    role: "Content Marketing Manager"
  },
  {
    quote: "As a small business owner, I don't have time to write product descriptions for my entire catalog. This tool has been a lifesaver for my e-commerce store.",
    author: "David Rodriguez",
    role: "E-commerce Entrepreneur"
  },
  {
    quote: "The Article Rewriter helps me repurpose my best content across different platforms. It maintains the core message while making each piece feel fresh and unique.",
    author: "Alex Thompson",
    role: "Digital Content Creator"
  }
];

const faqs = [
  {
    question: "Are these writing tools really free?",
    answer: "Yes! All our AI writing tools are completely free to use with no word limits, no registration required, and no hidden fees."
  },
  {
    question: "How many articles or content pieces can I generate?",
    answer: "There are no limits. You can generate as many articles, blog posts, product descriptions, or other content as you need."
  },
  {
    question: "Will the content be unique and plagiarism-free?",
    answer: "Yes, each generated piece of content is unique. For even more originality, we recommend adding your personal touches to the AI-generated content."
  },
  {
    question: "Do I need to create an account?",
    answer: "No account creation is necessary. Simply visit the tool page and start generating content immediately."
  },
  {
    question: "Can I use the generated content commercially?",
    answer: "Absolutely! You own all the content you generate and can use it for personal or commercial purposes."
  },
  {
    question: "How do I get the best results?",
    answer: "Provide specific details about your topic, target audience, and preferred tone. The more information you give, the more tailored your results will be."
  }
];
---

<Layout title="AI Writing Tools - Free Content Generators - AI-Free-Forever">
  <main class="container mx-auto px-4 py-12">
    {/* Hero Section */}
    <div class="bg-gradient-to-br from-indigo-50 to-indigo-100/50 py-16 mb-12 rounded-2xl text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Free AI Writing Tools
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Create professional-quality content in seconds with our powerful AI writing tools. Generate articles, blog posts, product descriptions, and moreâ€”completely free.
      </p>
    </div>

    {/* Tools Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {writingTools.map(tool => (
        <a href={tool.href} class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition group">
          <div class="p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class={`w-12 h-12 rounded-xl bg-${tool.color}-50 flex items-center justify-center text-${tool.color}-500 group-hover:bg-${tool.color}-100 transition`}>
                {tool.icon === 'rewrite' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                )}
                {tool.icon === 'blog' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                )}
                {tool.icon === 'product' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                  </svg>
                )}
                {tool.icon === 'faq' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {tool.icon === 'list' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                  </svg>
                )}
                {tool.icon === 'compare' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                  </svg>
                )}
                {tool.icon === 'review' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                )}
                {tool.icon === 'answer' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                  </svg>
                )}
              </div>
              <h2 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600 transition">{tool.name}</h2>
            </div>
            <p class="text-gray-600 mb-4">{tool.description}</p>
            <div class="flex justify-end">
              <span class="text-sm font-medium text-indigo-500 group-hover:text-indigo-600 transition flex items-center gap-1">
                Try it now
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    {/* Benefits Section */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Why Use Our AI Writing Tools?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Save Valuable Time</h3>
          <p class="text-gray-600">Generate high-quality content in seconds instead of spending hours writing and editing. Focus on strategy while our AI handles the execution.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Professional Quality</h3>
          <p class="text-gray-600">Our AI writing tools produce polished, error-free content that reads naturally and engages your audience effectively.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Customizable Content</h3>
          <p class="text-gray-600">Tailor your content by selecting different tones, styles, and formats to match your brand voice and audience preferences.</p>
        </div>
      </div>
    </div>

    {/* SEO Benefits */}
    <div class="mb-16 bg-white p-8 rounded-2xl shadow-lg">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">How AI Writing Tools Boost Your SEO</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Consistent Content Production</h3>
          <p class="text-gray-600 mb-6">Search engines reward websites that publish fresh, relevant content regularly. Our AI writing tools make it easy to maintain a consistent publishing schedule without sacrificing quality.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Keyword Optimization</h3>
          <p class="text-gray-600 mb-6">Our tools naturally incorporate relevant keywords into your content, helping you rank higher in search results without keyword stuffing or other black-hat techniques.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Structured Content</h3>
          <p class="text-gray-600">Generated content follows SEO best practices with proper headings, paragraphs, and formatting that search engines love and readers find easy to consume.</p>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Reduced Bounce Rates</h3>
          <p class="text-gray-600 mb-6">Engaging, well-written content keeps visitors on your page longer, reducing bounce rates and sending positive signals to search engines about your content quality.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">FAQ Generation</h3>
          <p class="text-gray-600 mb-6">Our Blog FAQ Generator creates structured Q&A sections that can appear in Google's featured snippets, driving more organic traffic to your site.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Content Variety</h3>
          <p class="text-gray-600">Easily create different content types (listicles, how-to guides, product reviews) to target various search intents and capture more organic traffic.</p>
        </div>
      </div>
    </div>

    {/* Testimonials */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">What Our Users Say</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map(testimonial => (
          <div class="bg-white p-6 rounded-2xl shadow-md">
            <div class="flex gap-1 mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-gray-600 mb-4 italic">"{testimonial.quote}"</p>
            <div>
              <p class="font-semibold text-gray-900">{testimonial.author}</p>
              <p class="text-sm text-gray-500">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* How It Works */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">How Our AI Writing Tools Work</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 mx-auto mb-4">
            <span class="text-xl font-bold">1</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Choose Your Tool</h3>
          <p class="text-gray-600">Select the specific writing tool that matches your content needs.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 mx-auto mb-4">
            <span class="text-xl font-bold">2</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Enter Your Topic</h3>
          <p class="text-gray-600">Provide details about what you want to write about.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 mx-auto mb-4">
            <span class="text-xl font-bold">3</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Customize Options</h3>
          <p class="text-gray-600">Select tone, style, length, and other preferences.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 mx-auto mb-4">
            <span class="text-xl font-bold">4</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Generate & Use</h3>
          <p class="text-gray-600">Get instant results ready to copy and publish.</p>
        </div>
      </div>
    </div>

    {/* FAQ Section */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
      <div class="space-y-4 max-w-3xl mx-auto">
        {faqs.map(faq => (
          <div class="bg-white p-6 rounded-2xl shadow-md">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>

    {/* CTA Section */}
    <div class="bg-indigo-50 p-8 rounded-2xl text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to Supercharge Your Content Creation?</h2>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">Start creating professional-quality content in seconds with our free AI writing tools. No registration, no credit card, no limits.</p>
      <div class="flex flex-wrap justify-center gap-4">
        {writingTools.slice(0, 4).map(tool => (
          <a 
            href={tool.href} 
            class="px-6 py-3 bg-indigo-500 text-white rounded-xl hover:bg-indigo-600 transition shadow-md"
          >
            Try {tool.name}
          </a>
        ))}
      </div>
      <div class="mt-4">
        <a href="/tools" class="text-indigo-600 hover:text-indigo-700 font-medium">
          View all writing tools â†’
        </a>
      </div>
    </div>
  </main>
</Layout>