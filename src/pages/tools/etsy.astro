---
import Layout from '../../layouts/Layout.astro';

const etsyTools = [
  {
    name: "Etsy Product Description Generator",
    description: "Create compelling, SEO-optimized product descriptions that convert browsers into buyers. Generate engaging copy that highlights your product's unique features and benefits.",
    icon: "description",
    color: "orange",
    href: "/tools/etsy-product-description"
  },
  {
    name: "Etsy Tag Generator",
    description: "Generate high-converting, search-optimized tags for your Etsy listings. Maximize your product visibility with the perfect keyword combinations.",
    icon: "tag",
    color: "teal",
    href: "/tools/etsy-tag-generator"
  },
  {
    name: "Etsy Shop Name Generator",
    description: "Find the perfect name for your Etsy shop with our AI-powered name generator. Create memorable, brandable shop names that stand out in the marketplace.",
    icon: "shop",
    color: "pink",
    href: "/tools/etsy-shop-name-generator"
  },
  {
    name: "Etsy Title Generator",
    description: "Craft attention-grabbing, SEO-friendly listing titles that improve your search ranking and click-through rate. Generate titles that sell your products effectively.",
    icon: "title",
    color: "indigo",
    href: "/tools/etsy-title-generator"
  },
  {
    name: "Etsy Keyword Generator",
    description: "Discover high-performing keywords for your Etsy listings. Uncover the search terms buyers are using to find products like yours.",
    icon: "keyword",
    color: "emerald",
    href: "/tools/etsy-keyword-generator"
  },
  {
    name: "Etsy Shop Description Generator",
    description: "Create a professional, engaging shop description that builds trust and showcases your brand story. Generate copy that connects with customers and increases sales.",
    icon: "shop-description",
    color: "purple",
    href: "/tools/etsy-shop-description-generator"
  }
];

const testimonials = [
  {
    quote: "The Etsy Product Description Generator helped me transform my basic listings into compelling sales copy. My conversion rate has increased by 35% since I started using it!",
    author: "Emma Johnson",
    role: "Handmade Jewelry Seller"
  },
  {
    quote: "Finding the right tags was always my biggest struggle. The Etsy Tag Generator instantly provides me with optimized tags that have significantly improved my shop's visibility.",
    author: "Mark Williams",
    role: "Vintage Home Decor Shop Owner"
  },
  {
    quote: "As a new Etsy seller, I was overwhelmed with all the SEO requirements. These tools made it so much easier to create professional listings that actually get found in searches.",
    author: "Sophia Chen",
    role: "Digital Print Shop Owner"
  }
];

const faqs = [
  {
    question: "Are these Etsy tools really free?",
    answer: "Yes! All our AI Etsy tools are completely free to use with no word limits, no registration required, and no hidden fees."
  },
  {
    question: "How do these tools help my Etsy shop?",
    answer: "Our tools help optimize your listings for Etsy's search algorithm, create more compelling product descriptions, generate effective tags and keywords, and craft professional shop content—all of which can lead to increased visibility, higher click-through rates, and better conversion rates."
  },
  {
    question: "Will the generated content be unique for each listing?",
    answer: "Yes, each piece of content is uniquely generated based on your specific inputs. We recommend adding your personal touches to make the content even more authentic and tailored to your brand."
  },
  {
    question: "Do I need to create an account?",
    answer: "No account creation is necessary. Simply visit the tool page and start generating content immediately."
  },
  {
    question: "How often should I update my Etsy listings?",
    answer: "It's good practice to refresh your listings every few months or whenever Etsy makes algorithm changes. Our tools make it easy to generate fresh content and keep your shop competitive."
  },
  {
    question: "How do I get the best results from these tools?",
    answer: "Provide specific details about your products, including materials, dimensions, uses, and unique selling points. The more information you give, the more tailored and effective your generated content will be."
  }
];

const stats = [
  { number: "70%", description: "of Etsy shoppers use search to find products" },
  { number: "82%", description: "of purchase decisions are influenced by product descriptions" },
  { number: "3x", description: "higher visibility for listings with optimized titles and tags" },
  { number: "60%", description: "of shoppers read shop descriptions before making a purchase" }
];
---

<Layout title="AI Tools for Etsy Sellers - Free Listing Optimization - AI-Free-Forever">
  <main class="container mx-auto px-4 py-12">
    {/* Hero Section */}
    <div class="bg-gradient-to-br from-orange-50 to-orange-100/50 py-16 mb-12 rounded-2xl text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Free AI Tools for Etsy Sellers
      </h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Boost your Etsy shop's visibility and sales with our powerful AI tools. Create SEO-optimized listings, compelling descriptions, and perfect tags—all completely free.
      </p>
    </div>

    {/* Stats Section */}
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-16">
      {stats.map(stat => (
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <p class="text-3xl font-bold text-orange-500 mb-2">{stat.number}</p>
          <p class="text-gray-600">{stat.description}</p>
        </div>
      ))}
    </div>

    {/* Tools Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {etsyTools.map(tool => (
        <a href={tool.href} class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition group">
          <div class="p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class={`w-12 h-12 rounded-xl bg-${tool.color}-50 flex items-center justify-center text-${tool.color}-500 group-hover:bg-${tool.color}-100 transition`}>
                {tool.icon === 'description' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                )}
                {tool.icon === 'tag' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                )}
                {tool.icon === 'shop' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                  </svg>
                )}
                {tool.icon === 'title' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
                {tool.icon === 'keyword' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                )}
                {tool.icon === 'shop-description' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                )}
              </div>
              <h2 class="text-xl font-bold text-gray-900 group-hover:text-orange-500 transition">{tool.name}</h2>
            </div>
            <p class="text-gray-600 mb-4">{tool.description}</p>
            <div class="flex justify-end">
              <span class="text-sm font-medium text-orange-500 group-hover:text-orange-600 transition flex items-center gap-1">
                Try it now
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    {/* Benefits Section */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Why Use Our Etsy AI Tools?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-orange-50 flex items-center justify-center text-orange-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Increase Visibility</h3>
          <p class="text-gray-600">Optimize your listings for Etsy's search algorithm with SEO-friendly titles, descriptions, and tags that help your products get discovered.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-orange-50 flex items-center justify-center text-orange-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Boost Conversion Rates</h3>
          <p class="text-gray-600">Transform browsers into buyers with compelling product descriptions that highlight benefits, address objections, and create urgency.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md">
          <div class="w-12 h-12 rounded-xl bg-orange-50 flex items-center justify-center text-orange-500 mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Save Valuable Time</h3>
          <p class="text-gray-600">Create professional-quality listings in minutes instead of hours, allowing you to focus on creating products and growing your business.</p>
        </div>
      </div>
    </div>

    {/* Etsy Success Section */}
    <div class="mb-16 bg-white p-8 rounded-2xl shadow-lg">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">How Our AI Tools Drive Etsy Shop Success</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Etsy SEO Optimization</h3>
          <p class="text-gray-600 mb-6">Our tools are specifically designed to work with Etsy's unique search algorithm, helping your products rank higher in relevant searches.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Persuasive Product Storytelling</h3>
          <p class="text-gray-600 mb-6">Create emotional connections with buyers through compelling product stories that highlight the unique value and craftsmanship of your items.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Consistent Brand Voice</h3>
          <p class="text-gray-600">Maintain a professional, consistent tone across all your listings and shop content to build trust and brand recognition.</p>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Keyword Research</h3>
          <p class="text-gray-600 mb-6">Discover the exact search terms buyers are using to find products like yours, and seamlessly incorporate them into your listings.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Competitive Edge</h3>
          <p class="text-gray-600 mb-6">Stand out from millions of other Etsy sellers with professionally crafted listings that highlight your products' unique features and benefits.</p>
          
          <h3 class="text-xl font-bold text-gray-900 mb-4">Scalable Listing Creation</h3>
          <p class="text-gray-600">Easily create and update multiple listings with consistent quality, perfect for sellers with large inventories or frequent product updates.</p>
        </div>
      </div>
    </div>

    {/* Testimonials */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">What Our Users Say</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map(testimonial => (
          <div class="bg-white p-6 rounded-2xl shadow-md">
            <div class="flex gap-1 mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-gray-600 mb-4 italic">"{testimonial.quote}"</p>
            <div>
              <p class="font-semibold text-gray-900">{testimonial.author}</p>
              <p class="text-sm text-gray-500">{testimonial.role}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    {/* How It Works */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">How Our Etsy AI Tools Work</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-orange-50 flex items-center justify-center text-orange-500 mx-auto mb-4">
            <span class="text-xl font-bold">1</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Choose Your Tool</h3>
          <p class="text-gray-600">Select the specific Etsy tool that matches your current needs.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-orange-50 flex items-center justify-center text-orange-500 mx-auto mb-4">
            <span class="text-xl font-bold">2</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Enter Product Details</h3>
          <p class="text-gray-600">Provide information about your product, materials, features, and target audience.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-orange-50 flex items-center justify-center text-orange-500 mx-auto mb-4">
            <span class="text-xl font-bold">3</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Customize Options</h3>
          <p class="text-gray-600">Select tone, style, and other preferences to match your brand voice.</p>
        </div>
        <div class="bg-white p-6 rounded-2xl shadow-md text-center">
          <div class="w-12 h-12 rounded-full bg-orange-50 flex items-center justify-center text-orange-500 mx-auto mb-4">
            <span class="text-xl font-bold">4</span>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Generate & Use</h3>
          <p class="text-gray-600">Get instant results ready to copy and paste into your Etsy listings.</p>
        </div>
      </div>
    </div>

    {/* FAQ Section */}
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>
      <div class="space-y-4 max-w-3xl mx-auto">
        {faqs.map(faq => (
          <div class="bg-white p-6 rounded-2xl shadow-md">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>

    {/* CTA Section */}
    <div class="bg-orange-50 p-8 rounded-2xl text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to Boost Your Etsy Shop's Success?</h2>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">Start creating optimized listings that attract more buyers and drive more sales with our free AI tools for Etsy sellers. No registration, no credit card, no limits.</p>
      <div class="flex flex-wrap justify-center gap-4">
        {etsyTools.slice(0, 4).map(tool => (
          <a 
            href={tool.href} 
            class="px-6 py-3 bg-orange-500 text-white rounded-xl hover:bg-orange-600 transition shadow-md"
          >
            Try {tool.name}
          </a>
        ))}
      </div>
      <div class="mt-4">
        <a href="/tools" class="text-orange-600 hover:text-orange-700 font-medium">
          View all Etsy tools →
        </a>
      </div>
    </div>
  </main>
</Layout>