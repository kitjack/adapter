                <td class="py-3 px-4 text-gray-900">Hashtag Suggestions</td>
                <td class="py-3 px-4 text-gray-700">Yes (included)</td>
                <td class="py-3 px-4 text-gray-700">Limited (manual input)</td>
                <td class="py-3 px-4 text-gray-700">Limited (manual input)</td>
                <td class="py-3 px-4 text-gray-700">Limited (manual input)</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
    <SimilarTools currentToolPath="twitter-thread" category="social-media" client:load />
  </main>
</Layout>