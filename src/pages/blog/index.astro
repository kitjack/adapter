---
import Layout from '../../layouts/Layout.astro';

const posts = [
  {
    id: 1,
    title: "8 Popular Social Media AI Tools And How To Use Them",
    excerpt: "Discover the top 8 AI-powered social media tools that can revolutionize your content creation process and boost engagement.",
    category: "SOCIAL MEDIA",
    date: "January 15, 2025",
    author: "AI Forever Team",
    image: "https://images.pexels.com/photos/11035471/pexels-photo-11035471.jpeg",
    slug: "8-popular-social-media-ai-tools"
  },
  {
    id: 2,
    title: "20 AI Image Generator Models And How To Use Them",
    excerpt: "Explore 20 cutting-edge AI image generator models that are transforming digital art creation, photography editing, and graphic design.",
    category: "DESIGN",
    date: "January 22, 2025",
    author: "AI Forever Team",
    image: "https://images.pexels.com/photos/2004161/pexels-photo-2004161.jpeg",
    slug: "20-ai-image-generator-models"
  }
];

const categories = [
  { name: "All Categories", count: 12 },
  { name: "Social Media", count: 5 },
  { name: "Content Creation", count: 4 },
  { name: "AI Tools", count: 8 },
  { name: "Design", count: 3 }
];
---

<Layout title="Blog - AI-Free-Forever">
  <main class="container mx-auto px-4 py-12">
    <div class="bg-gradient-to-br from-indigo-50 to-indigo-100/50 py-16 mb-12 rounded-2xl text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        AI Tools Blog
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Insights, tutorials, and updates from the world of AI technology.
      </p>
    </div>

    <div class="grid grid-cols-3 gap-8">
      <!-- First column - Blog post 1 -->
      <div class="col-span-1">
        <article class="bg-white rounded-2xl shadow-lg overflow-hidden h-full">
          <a href={`/blog/${posts[0].slug}`} class="block h-full flex flex-col">
            <img 
              src={posts[0].image} 
              alt={posts[0].title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6 flex-grow flex flex-col">
              <div class="flex items-center gap-3 mb-3">
                <span class="text-xs font-medium text-indigo-500">{posts[0].category}</span>
                <span class="text-xs text-gray-500">•</span>
                <time class="text-xs text-gray-500">{posts[0].date}</time>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3 hover:text-indigo-600 transition">
                {posts[0].title}
              </h3>
              <p class="text-gray-600 mb-4 text-sm flex-grow">
                {posts[0].excerpt}
              </p>
              <div class="flex items-center justify-between mt-auto">
                <div class="flex items-center gap-2">
                  <span class="text-xs text-gray-500">By</span>
                  <span class="text-xs font-medium text-gray-900">{posts[0].author}</span>
                </div>
                <span class="text-sm text-indigo-500 font-medium hover:text-indigo-600 transition">Read more →</span>
              </div>
            </div>
          </a>
        </article>
      </div>
      
      <!-- Second column - Blog post 2 -->
      <div class="col-span-1">
        <article class="bg-white rounded-2xl shadow-lg overflow-hidden h-full">
          <a href={`/blog/${posts[1].slug}`} class="block h-full flex flex-col">
            <img 
              src={posts[1].image} 
              alt={posts[1].title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6 flex-grow flex flex-col">
              <div class="flex items-center gap-3 mb-3">
                <span class="text-xs font-medium text-indigo-500">{posts[1].category}</span>
                <span class="text-xs text-gray-500">•</span>
                <time class="text-xs text-gray-500">{posts[1].date}</time>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3 hover:text-indigo-600 transition">
                {posts[1].title}
              </h3>
              <p class="text-gray-600 mb-4 text-sm flex-grow">
                {posts[1].excerpt}
              </p>
              <div class="flex items-center justify-between mt-auto">
                <div class="flex items-center gap-2">
                  <span class="text-xs text-gray-500">By</span>
                  <span class="text-xs font-medium text-gray-900">{posts[1].author}</span>
                </div>
                <span class="text-sm text-indigo-500 font-medium hover:text-indigo-600 transition">Read more →</span>
              </div>
            </div>
          </a>
        </article>
      </div>
      
      <!-- Third column - Sidebar -->
      <aside class="col-span-1">
        {/* Categories */}
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Categories</h2>
          <div class="space-y-2">
            {categories.map(category => (
              <a href={`/blog/category/${category.name.toLowerCase().replace(/ /g, '-')}`} class="flex items-center justify-between p-3 rounded-xl bg-gray-50 hover:bg-gray-100 transition">
                <span class="text-sm text-gray-900">{category.name}</span>
                <span class="text-xs text-indigo-500 bg-white px-2 py-1 rounded-lg">
                  {category.count}
                </span>
              </a>
            ))}
          </div>
        </div>
        
        {/* Recent Posts */}
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Recent Posts</h2>
          <div class="space-y-4">
            {posts.map(post => (
              <a href={`/blog/${post.slug}`} class="block group">
                <div class="flex flex-col">
                  <time class="text-xs text-gray-500 mb-1">{post.date}</time>
                  <h3 class="text-sm font-semibold text-gray-900 group-hover:text-indigo-500 transition">
                    {post.title}
                  </h3>
                </div>
              </a>
            ))}
          </div>
        </div>

        {/* Social Media Tools */}
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Social Media Tools</h2>
          <div class="space-y-2">
            <a href="/tools/youtube-description" class="flex items-center gap-2 p-3 rounded-xl bg-gray-50 hover:bg-gray-100 transition">
              <div class="w-8 h-8 rounded-lg bg-red-50 flex items-center justify-center text-red-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-sm">YouTube Description</span>
            </a>
            <a href="/tools/linkedin-post" class="flex items-center gap-2 p-3 rounded-xl bg-gray-50 hover:bg-gray-100 transition">
              <div class="w-8 h-8 rounded-lg bg-blue-50 flex items-center justify-center text-blue-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="text-sm">LinkedIn Post</span>
            </a>
            <a href="/tools/instagram-caption" class="flex items-center gap-2 p-3 rounded-xl bg-gray-50 hover:bg-gray-100 transition">
              <div class="w-8 h-8 rounded-lg bg-pink-50 flex items-center justify-center text-pink-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="text-sm">Instagram Caption</span>
            </a>
            <a href="/tools/twitter-thread" class="flex items-center gap-2 p-3 rounded-xl bg-gray-50 hover:bg-gray-100 transition">
              <div class="w-8 h-8 rounded-lg bg-sky-50 flex items-center justify-center text-sky-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                </svg>
              </div>
              <span class="text-sm">Twitter Thread</span>
            </a>
            <a href="/tools/facebook-post" class="flex items-center gap-2 p-3 rounded-xl bg-gray-50 hover:bg-gray-100 transition">
              <div class="w-8 h-8 rounded-lg bg-facebook/10 flex items-center justify-center text-facebook">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                </svg>
              </div>
              <span class="text-sm">Facebook Post</span>
            </a>
          </div>
          
          <div class="mt-4">
            <a 
              href="/tools" 
              class="block text-center w-full py-2 text-sm bg-indigo-500 text-white rounded-xl hover:bg-indigo-600 transition"
            >
              View All Tools
            </a>
          </div>
        </div>
      </aside>
    </div>
  </main>
</Layout>